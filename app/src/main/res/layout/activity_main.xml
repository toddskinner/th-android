<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.th_android.MainActivity">

    <ImageView
        android:id="@+id/eggplant_salad_image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:src="@drawable/eggplant_salad" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/info_text_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Tamarind Hall"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/oneline_text_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Thai Restaurant and Bar"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/review_text_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="4 stars"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/address_text_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="1268 Grant Ave"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>
